<div id="index-banner" class="parallax-container z-depth-5">
  <div class="section no-pad-bot">
    <div class="container">
      <br><br>
      <h1 class="header center">Índices de crecimiento de los Estados de México</h1>
      <div class="row center">
        <h5 class="header col s12 light">ICEM</h5>
      </div>
      <div class="row center">
        <a href="http://materializecss.com/getting-started.html" id="download-button" class="btn-large waves-effect waves-light teal">Get Started</a>
      </div>
      <br><br>
    </div>
  </div>
  <div class="parallax"><img src="https://drscdn.500px.org/photo/137915677/q%3D80_m%3D2000_k%3D1/cbd78eae2fc4af5ee6e007e59a32986b" alt="Unsplashed background img 1"></div>
</div>

<br/><br/>

<div class="container">
  <div class="section">
    <div class="row">
      <div class="col s12">
        <h4>Vizualizacion</h4>
        <div class="divider"></div>
        <p>Selecciona los estados e indicadores que deseas comparar</p>
        <div id="menu" class="row">
          <div class="col m12 s12 l6">
            <h6>Estados</h6>
            <% @states.each do |state| -%>
            <div class="col s6">
              <%= check_box_tag(state, '', false, class: 'state') %>
              <%= label_tag(state, state) %>
            </div>
            <% end -%>
          </div>
          <div class="col m12 s12 l6">
            <h6>Indicadores</h6>
            <% @indicators.each do |indicator| -%>
            <div class="col s6">
              <%= check_box_tag(indicator, '', false, class: 'indicator') %>
              <%= label_tag(indicator, indicator) %>
            </div>
            <% end -%>
          </div>
          <div class="col s12 center-align">
            <a id="submitGraph" class="btn waves-effect waves-light">Vizualizar</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="section">
    <div class="row">
      <div class="col-md-8 col-sm-7">
        <div id="graphs"></div>
      </div>
      <div class="col-md-4 col-sm-5">
        <div id="legend"></div>
      </div>
    </div>
  </div>
</div>


