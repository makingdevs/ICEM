<!DOCTYPE html>
<html>
<head>
  <title>ICEM</title>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
</head>

<!-- Navigation -->
<nav id="mainNav" class="navbar navbar-default navbar-fixed-top navbar-custom">
  <div class="container">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header page-scroll">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span> Menu <i class="fa fa-bars"></i>
      </button>
      <a class="navbar-brand">ICEM</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">
        <li class="hidden">
          <a href="#"></a>
        </li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle navbar-custom" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> Indicadores <span class="caret"></span> </a>
          <ul class="dropdown-menu navbar-custom">
            <% @indicators.each do |indicator| -%>
              <li>
                <a href="#"><%= indicator %></a>
              </li>
            <% end -%>
          </ul>
        </li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle navbar-custom" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> Estados <span class="caret"></span> </a>
          <ul class="dropdown-menu navbar-custom">
            <% @states.each do |state| -%>
              <li>
                <a href="#"><%= state %></a>
              </li>
            <% end -%>
          </ul>
        </li>
        <li class="page-scroll">
          <a href="">¿Quiénes somos?</a>
        </li>
      </ul>
    </div>
    <!-- /.navbar-collapse -->
  </div>
  <!-- /.container-fluid -->
</nav>

<body>
  <%= yield %>
  <%= javascript_include_tag "application" %>
</body>
</html>
