<!DOCTYPE html>
<html>
<head>
  <title>ICEM</title>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag 'application', params[:controller], media: 'all'%>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
  rel="stylesheet">
</head>
<body>

  <ul id="indicators" class="dropdown-content">
    <% @indicators.each do |indicator| -%>
      <li>
        <%= link_to indicator, {controller: "indicators", action: "indicators", name: indicator} %>
      </li>
    <% end -%>
  </ul>

  <ul id="states" class="dropdown-content">
    <% @states.each do |state| -%>
      <li>
        <%= link_to state, {controller: "states", action: "states", name: state} %>
      </li>
    <% end -%>
  </ul>

  <nav class="white" role="navigation">
    <div class="nav-wrapper container">
      <%= link_to ICEM, {controller: "welcome", action: "index"}, class:"brand-logo" %>
      <ul class="right hide-on-med-and-down">
        <li>
          <%= link_to "¿Quiénes somos?", {controller: "about", action:"index"} %>
        </li>
        <li>
          <a class="dropdown-button" href="#!" data-activates="states">Estados
            <i class="material-icons right">arrow_drop_down</i>
          </a>
        </li>
        <li>
          <a class="dropdown-button" href="#!" data-activates="indicators">Indicadores
            <i class="material-icons right">arrow_drop_down</i>
          </a>
        </li>
      </ul>

      <ul id="nav-mobile" class="side-nav">
        <li><a href="#">Navbar Link</a></li>
      </ul>
      <a href="#" data-activates="nav-mobile" class="button-collapse"><i class="material-icons">menu</i></a>
    </div>
  </nav>
  <%= yield %>
  <%= javascript_include_tag "application", params[:controller] %>
</body>
</html>
